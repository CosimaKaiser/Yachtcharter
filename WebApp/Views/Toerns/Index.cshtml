@model IEnumerable<YachtLib.Toern>

@{
    ViewBag.Title = "Törns";
}

<h2>Törns</h2>

<p>
    @Html.ActionLink("Neuen Törn anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ende)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Schiff.Typ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchiffId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Start)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ende)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Schiff.Typ)
    </td>
    <th>
        @Html.DisplayFor(modelItem => item.SchiffId)
    </th>
    @if (ViewBag.Admin == true)
    {
        <td>
            @Html.ActionLink("Anpassen", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
        </td>
    }
</tr>
}

</table>
