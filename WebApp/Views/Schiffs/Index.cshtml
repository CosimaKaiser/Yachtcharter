@model IEnumerable<YachtLib.Schiff>

@{
    ViewBag.Title = "Verfügbare Boote";
}

<h2>Verfügbare Boote</h2>
@if (ViewBag.Admin == true)
{
    <p>
        @Html.ActionLink("Neues Boot anlegen", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Typ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laenge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baujahr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schiffsname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Basis.Ort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Typ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Laenge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baujahr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Schiffsname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Basis.Ort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person.Name)
        </td>
        @if (ViewBag.Admin == true)
        {
            <td>
                @Html.ActionLink("Anpassen", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
            </td>
        }
        </tr>
        }

    </table>
